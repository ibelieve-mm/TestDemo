<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_common_gray_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_toCustomView"
            style="@style/DefaultTextView"
            android:text="自定义控件测试" />

        <TextView
            android:id="@+id/tv_toCustomScrollView"
            style="@style/DefaultTextView"
            android:text="自定义黏性ScrollView测试" />

        <TextView
            android:id="@+id/tv_toDragView"
            style="@style/DefaultTextView"
            android:text="拖拽View测试" />

        <TextView
            android:id="@+id/tv_toDragViewGroup"
            style="@style/DefaultTextView"
            android:text="拖拽ViewGroup测试" />

        <TextView
            android:id="@+id/tv_toChangeImgHueSaturationLumActivity"
            style="@style/DefaultTextView"
            android:text="改变图片的色调、饱和度、亮度" />

        <TextView
            android:id="@+id/tv_toChangeImgColorMatrixActivity"
            style="@style/DefaultTextView"
            android:text="图像特效处理之ColorMatrix" />

        <TextView
            android:id="@+id/tv_toChangeImgPixelsActivity"
            style="@style/DefaultTextView"
            android:text="图像特效处理之像素处理" />
    </LinearLayout>
</ScrollView>
